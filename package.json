{
  "name": "weibo-archiver",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.6.12",
  "description": "weibo-backup",
  "author": "Chilfish",
  "license": "MIT",
  "scripts": {
    "build": "vue-tsc --noEmit && pnpm vite build",
    "dev": "vite --port 3333 --open",
    "lint": "eslint .",
    "typecheck": "vue-tsc --noEmit",
    "preview": "vite preview",
    "up": "taze major -I",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@vueuse/core": "^10.3.0",
    "element-plus": "^2.3.9",
    "pinia": "^2.1.6",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.41.0",
    "@iconify-json/tabler": "^1.1.89",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@types/node": "^20.5.4",
    "@unocss/eslint-config": "^0.55.2",
    "@unocss/reset": "^0.55.2",
    "@unocss/transformer-directives": "^0.55.2",
    "@vitejs/plugin-vue": "^4.3.3",
    "eslint": "^8.47.0",
    "jsdom": "^22.1.0",
    "jszip": "^3.10.1",
    "lint-staged": "^14.0.1",
    "pnpm": "^8.6.12",
    "simple-git-hooks": "^2.9.0",
    "taze": "^0.11.2",
    "typescript": "^5.1.6",
    "unocss": "^0.55.2",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-vue-components": "^0.25.1",
    "vite": "^4.4.9",
    "vite-plugin-monkey": "^3.4.2",
    "vue-tsc": "^1.8.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "eslintConfig": {
    "extends": [
      "@antfu",
      "@unocss"
    ],
    "rules": {
      "no-console": "off"
    }
  }
}
